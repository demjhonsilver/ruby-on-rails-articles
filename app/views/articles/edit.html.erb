<br><div class="container mt-5 custom-container-s">
<div class="card-body">
<div class="card mb-3  px-4 py-4">
<h1>Edit Article</h1>
<%= form_for @article, html: { class: "form" } do |f| %>
    <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: "form-control" %>
    </div>
    <div class="form-group">
        <%= f.label :body %>
        <%= f.text_area :body, class: "form-control" %>
    </div>

    <div class="btn-group d-flex justify-content-center">
    <%= f.submit "Update Article", class: "btn btn-primary btn-md mt-3", style: "max-width: 150px; margin: 0 auto;" %>

    </div>


<% end %>
</div>
    
</div>
</div>
</div>