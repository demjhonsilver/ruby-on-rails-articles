<br><div class="container mt-5 custom-container-s">
<div class="card-body">
<div class="card mb-3  px-4 py-4">
        <h1>New Article</h1>
        <%= form_for @article, html: { class: "form" } do |f| %>
            <div class="form-group">
                <%= f.label :title %>
                <%= f.text_field :title, class: "form-control" %>
            </div>
            <div class="form-group">
                <%= f.label :body %>
                <%= f.text_area :body, class: "form-control" %>
            </div>
            <%= f.submit "Create Article", class: "btn btn-primary mt-3" %>
        <% end %>
</div>
</div>
</div>
</div>